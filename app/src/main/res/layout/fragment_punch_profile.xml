<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pnicorp.android.discoversentrode.PunchProfileFragment"
    android:orientation="vertical"
    android:id="@+id/fragmentHorizontalLayout"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#2f008fe8">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        card_view:cardCornerRadius="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Node xxxx"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:textColor="#514c52"
            android:textStyle="bold"
            android:typeface="serif"
            android:id="@+id/node_title"
            android:background="#ffffff"
            android:gravity="center"
            android:elevation="10dp"
            card_view:cardCornerRadius="8dp"/>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/node_details"
            android:background="#ffffff"
            android:textColor="#000000"
            android:elevation="4dp" />
    </android.support.v7.widget.CardView>


</LinearLayout>
